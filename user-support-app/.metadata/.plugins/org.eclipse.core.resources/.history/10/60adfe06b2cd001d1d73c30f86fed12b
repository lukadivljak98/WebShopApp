<%
	if (request.getParameter("submit") != null) {
		AppUser u = appUserBean.loginUser(appUser.getUsername(), appUser.getPassword());
		if (u != null) {
			u.setFirstName(u.getFirstName());
			u.setLastName(u.getLastName());
			u.setEmail(u.getEmail());
			u.setLoggedIn(true);
			session.setAttribute("notification", "");
			response.sendRedirect("messages.jsp");
		} else {
			session.setAttribute("notification", "Unijeli ste neispravno korisni&#269;ko ime ili lozinku.");
			//u.setLoggedIn(false);
		}
	} else {
		session.setAttribute("notification", "");
	}
%>
